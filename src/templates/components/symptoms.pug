section.symptoms.block
	.container
		h2.title Вы уверены, что у вас нет варикоза?
		p.symptoms__subtitle.subtitle присмотритесь к этим симптомам
		.symptoms-content
			.visible
				.symptoms-title__wrap
					h3.symptoms-title Видимые симптомы
				.symptoms__slider
					.symptoms__slide
						img.symptoms__photo(src="img/symptoms1.png", alt="Сосудистые звездочки")
					.symptoms__slide
						img.symptoms__photo(src="img/symptoms2.png", alt="Отеки")
					.symptoms__slide
						img.symptoms__photo(src="img/symptoms3.png", alt="Выступающие вены")
				ul.symptoms__description
					li.description__item
						p.description__text Сосудистые
							br
							| звездочки
					li.description__item
						p.description__text Отеки
					li.description__item
						p.description__text Выступающие
							br
							| вены
			.unvisible
				.symptoms-title__wrap
					h3.symptoms-title Невидимые симптомы
				ul.unvisible__list
					li.unvisible__item
						p.unvisible__text Боль при ходьбе
					li.unvisible__item
						p.unvisible__text Холодные ноги
					li.unvisible__item
						p.unvisible__text Усталость ног
					li.unvisible__item
						p.unvisible__text Ночные судороги
					li.unvisible__item
						p.unvisible__text Покалывание
					li.unvisible__item
						p.unvisible__text Чувство жжения
					li.unvisible__item
						p.unvisible__text Зуд
					li.unvisible__item
						p.unvisible__text Онемение
					li.unvisible__item
						p.unvisible__text Тяжесть в ногах
					li.unvisible__item
						p.unvisible__text Боль в состоянии покоя
			.symptoms__footer-wrap
				p.symptoms__footer Любой из этих симптомов&nbsp;- 
					br
					| признак варикоза

